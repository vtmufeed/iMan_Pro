<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/form_background"
    android:layout_height="match_parent"
    tools:context=".StockTrasnferScan">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:onClick="backPressed"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/back_black"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:text="Stock Transfer"
                    android:textColor="#063844"
                    android:textSize="35sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txt_tra_scan_id"
                            android:enabled="false"
                            android:text="ASDSA"
                            android:textColor="#000000"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="10dp"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:background="@drawable/form_input_field_sm"
                            android:layout_height="40dp"/>
                        <EditText
                            android:id="@+id/txt_tra_scan_loc"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:minHeight="40dp"
                            android:enabled="false"
                            android:layout_width="wrap_content"
                            android:text=""
                            android:inputType="textMultiLine"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/form_input_field_sm"/>
                        <EditText
                            android:id="@+id/txt_tra_scan_date"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:minHeight="40dp"
                            android:enabled="false"
                            android:layout_width="wrap_content"
                            android:text=""
                            android:inputType="textMultiLine"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/form_input_field_sm"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txt_tra_scan_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/form_input_field_sm"
                            android:hint="Scan Barcode"
                            android:inputType="number"
                            android:minHeight="40dp"
                            android:text=""
                            android:textAlignment="center" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="Product Code" />
                        <EditText
                            android:id="@+id/txt_tra_scan_prod"
                            android:enabled="false"
                            android:text=""
                            android:textColor="#000000"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:background="@drawable/form_input_field_sm"
                            android:layout_height="40dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="Stock\nSU" />
                        <EditText
                            android:id="@+id/txt_tra_scan_su"
                            android:enabled="false"
                            android:text=""
                            android:textColor="#000000"
                            android:layout_weight="1"
                            android:layout_gravity="center_horizontal"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:background="@drawable/form_input_field_sm"
                            android:layout_height="40dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Product Description" />
                        <EditText
                            android:textColor="#000000"
                            android:textAlignment="center"
                            android:id="@+id/txt_tra_scan_desc"
                            android:layout_height="wrap_content"
                            android:minHeight="40dp"
                            android:layout_width="match_parent"
                            android:text=""
                            android:enabled="false"
                            android:hint="Product Description"
                            android:inputType="textMultiLine"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/form_input_field_sm"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="RSP" />
                            <EditText
                                android:textColor="#000000"
                                android:textAlignment="center"
                                android:id="@+id/txt_tra_scan_rsp"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:layout_width="match_parent"
                                android:text=""
                                android:layout_weight="1"
                                android:enabled="false"
                                android:inputType="textMultiLine"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/form_input_field_sm"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="Conversion" />
                            <EditText
                                android:textColor="#000000"
                                android:textAlignment="center"
                                android:id="@+id/txt_tra_scan_conv"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:layout_width="match_parent"
                                android:text=""
                                android:layout_weight="1"
                                android:enabled="false"
                                android:inputType="textMultiLine"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/form_input_field_sm"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="HO Stock" />
                            <EditText
                                android:textColor="#000000"
                                android:textAlignment="center"
                                android:id="@+id/txt_tra_scan_stock"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:layout_width="match_parent"
                                android:text=""
                                android:layout_weight="1"
                                android:enabled="false"
                                android:inputType="textMultiLine"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/form_input_field_sm"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="Cost/LPP" />
                            <EditText
                                android:textColor="#000000"
                                android:textAlignment="center"
                                android:id="@+id/txt_tra_scan_lpp"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:layout_width="match_parent"
                                android:text=""
                                android:layout_weight="1"
                                android:enabled="false"
                                android:inputType="textMultiLine"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/form_input_field_sm"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="18sp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:gravity="center"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="250dp"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center_horizontal"
                                        android:background="@drawable/form_input_field_sm"
                                        android:layout_height="match_parent">
                                        <Button
                                            android:layout_width="30dp"
                                            android:layout_height="50dp"
                                            android:gravity="center_vertical|center_horizontal"
                                            android:layout_gravity="center|center_vertical"
                                            android:background="@null"
                                            android:text="-"
                                            android:layout_weight="1"
                                            android:drawableTint="@android:color/white"
                                            android:onClick="minusPressed"
                                            android:textColor="#000000"
                                            android:textSize="32sp"/>
                                        <EditText
                                            android:id="@+id/txt_tra_scan_qty"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:background="@null"
                                            android:inputType="numberSigned"
                                            android:minHeight="40dp"
                                            android:text=""
                                            android:layout_weight="10"
                                            android:minWidth="100dp"
                                            android:maxWidth="100dp"
                                            android:textSize="28sp"
                                            android:textAlignment="center"
                                            android:textColor="#000000" />
                                        <Button
                                            android:id="@+id/btn_plus"
                                            android:layout_width="30dp"
                                            android:layout_height="50dp"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical|center_horizontal"
                                            android:layout_gravity="center|center_vertical"
                                            android:background="@null"
                                            android:text="+"
                                            android:drawableTint="@android:color/white"
                                            android:onClick="addPressed"
                                            android:textColor="#000000"
                                            android:textSize="32sp"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_marginLeft="75dp"
                                        android:layout_marginRight="75dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_height="35dp">
                                        <Button
                                            android:layout_gravity="center_horizontal"
                                            android:layout_width="50dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_clear"
                                            android:drawableTint="@android:color/white"
                                            android:onClick="clearAll"
                                            android:padding="2dp"
                                            android:text="Clear"
                                            android:textColor="#000000"
                                            android:textSize="14sp" />
                                        <Button
                                            android:layout_gravity="center_horizontal"
                                            android:layout_width="50dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:background="@drawable/button_bottom_save"
                                            android:drawableTint="@android:color/white"
                                            android:onClick="savePressed"
                                            android:padding="2dp"
                                            android:text="Save"
                                            android:textColor="@android:color/white"
                                            android:textSize="14sp" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/txt_exist_qty"
                                        android:gravity="center_horizontal"
                                        android:layout_width="match_parent"
                                        android:text=""
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:id="@+id/btn_del_trans"
                    android:background="@drawable/button_bottom"
                    android:drawableTop="@drawable/delete"
                    android:padding="5dp"
                    android:drawableTint="@android:color/white"
                    android:text="delete"
                    android:onClick="deletePressed"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
                <Button
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/button_bottom"
                    android:drawableTop="@drawable/validate"
                    android:padding="5dp"
                    android:drawableTint="@android:color/white"
                    android:text="Valid"
                    android:onClick="validatePressed"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
                <Button
                    android:visibility="gone"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/button_bottom"
                    android:drawableTop="@drawable/clear"
                    android:padding="5dp"
                    android:drawableTint="@android:color/white"
                    android:text="Clear"
                    android:onClick="clearAll"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
                <Button
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/button_bottom"
                    android:drawableTop="@drawable/save"
                    android:padding="5dp"
                    android:drawableTint="#FFFFFF"
                    android:text="Save"
                    android:visibility="gone"
                    android:id="@+id/btn_save_trans"
                    android:onClick="savePressed"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
                <Button
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/button_bottom"
                    android:drawableTop="@drawable/view"
                    android:padding="5dp"
                    android:drawableTint="#FFFFFF"
                    android:text="Report"
                    android:onClick="reportPressed"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
                <Button
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/button_bottom"
                    android:drawableTop="@drawable/mail"
                    android:padding="5dp"
                    android:drawableTint="#FFFFFF"
                    android:text="Mail"
                    android:onClick="mailPressed"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
</android.support.constraint.ConstraintLayout>