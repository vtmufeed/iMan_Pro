<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_background"
    android:orientation="vertical"
    tools:context=".LabelScan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Label Scan"
                android:layout_gravity="center_vertical"
                android:textColor="#063844"
                android:textStyle="bold"
                android:id="@+id/txt_lot"
                android:layout_marginRight="20dp"
                android:textSize="35sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:textColor="#000000"
                android:id="@+id/txt_barcode"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/form_input_field_sm"
                android:ems="10"
                android:hint="Barcode"
                android:inputType="number"
                android:enabled="false"
                android:textAlignment="center" />

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/imageButton8"
                android:layout_marginTop="7dp"
                android:layout_width="5dp"
                android:layout_marginRight="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@null"
                android:onClick="DeleteBarPressed"
                android:text="Clear"
                app:srcCompat="@drawable/delete" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="83dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:text="Prod Code"
                android:gravity="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txt_prod_code"
                android:textColor="#000000"
                android:layout_width="108dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/form_input_field_sm"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="100dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:text="SU"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txt_su"
                android:textColor="#000000"
                android:layout_width="113dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/form_input_field_sm"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="textPersonName" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal" />
        <EditText
            android:id="@+id/txt_prod_desc"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/form_input_field_sm"
            android:ems="10"
            android:enabled="false"
            android:inputType="textMultiLine"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arabic Description"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" />
        <EditText
            android:id="@+id/txt_prod_desc_ar"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/form_input_field_sm"
            android:ems="10"
            android:enabled="false"
            android:inputType="textMultiLine"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="83dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:text="Price"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_price"
                android:textColor="#000000"
                android:layout_width="108dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/form_input_field_sm"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="100dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:text="UOM"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_conv"
                android:textColor="#000000"
                android:layout_width="80dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/form_input_field_sm"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="83dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:text="Stock"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_stock"
                android:textColor="#000000"
                android:layout_width="108dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/form_input_field_sm"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="textPersonName" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Label Count"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:background="@drawable/form_input_field_sm"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_gravity="center|center_vertical"
                        android:background="@null"
                        android:text="-"
                        android:layout_weight="1"
                        android:drawableTint="@android:color/white"
                        android:onClick="minusPressed"
                        android:textColor="#000000"
                        android:textSize="32sp"/>
                    <EditText
                        android:id="@+id/txt_lbl_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:inputType="numberSigned"
                        android:minHeight="40dp"
                        android:text=""
                        android:layout_weight="10"
                        android:minWidth="100dp"
                        android:maxWidth="100dp"
                        android:textSize="28sp"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_gravity="center|center_vertical"
                        android:background="@null"
                        android:text="+"
                        android:drawableTint="@android:color/white"
                        android:onClick="addPressed"
                        android:textColor="#000000"
                        android:textSize="32sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="75dp"
                    android:layout_marginRight="75dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp">
                    <Button
                        android:layout_gravity="center_horizontal"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_clear"
                        android:drawableTint="@android:color/white"
                        android:onClick="ClearPressed"
                        android:padding="2dp"
                        android:text="Clear"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                    <Button
                        android:layout_gravity="center_horizontal"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_bottom_save"
                        android:drawableTint="@android:color/white"
                        android:onClick="savePressed"
                        android:padding="2dp"
                        android:text="Save"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_prod_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Product Count: 0"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" | "
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lbl_label_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Label Count: 0"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Ed_qty"
            android:layout_centerHorizontal="true"
            android:progressTint="@android:color/holo_red_dark"
            android:visibility="invisible" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <Button
                android:layout_marginRight="2dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/button_bottom"
                android:drawableTop="@drawable/clearance_down"
                android:padding="5dp"
                android:drawableTint="@android:color/white"
                android:text="CLEARANCE"
                android:onClick="showClearanceDialog"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
            <Button
                android:layout_marginRight="2dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/button_bottom"
                android:drawableTop="@drawable/delete"
                android:padding="5dp"
                android:drawableTint="@android:color/white"
                android:text="Delete"
                android:onClick="DeletePressed"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
            <Button
                android:visibility="gone"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/button_bottom"
                android:drawableTop="@drawable/clear"
                android:padding="5dp"
                android:drawableTint="@android:color/white"
                android:text="Clear"
                android:onClick="ClearPressed"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
            <Button
                android:visibility="gone"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/button_bottom"
                android:drawableTop="@drawable/save"
                android:padding="5dp"
                android:drawableTint="@android:color/white"
                android:text="Save"
                android:onClick="savePressed"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
            <Button
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/button_bottom"
                android:drawableTop="@drawable/view"
                android:padding="5dp"
                android:drawableTint="@android:color/white"
                android:text="View"
                android:onClick="viewPressed"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
            <Button
                android:layout_marginRight="5dp"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/button_bottom"
                android:drawableTop="@drawable/print"
                android:padding="5dp"
                android:drawableTint="@android:color/white"
                android:text="Print"
                android:onClick="printPressed"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>