<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_background"
    tools:context=".InventoryNew">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_gravity="center_vertical"
                    android:onClick="backPressed"
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/back_black"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/lbl_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:text="param"
                    android:textColor="#063844"
                    android:textSize="35sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_inv_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:text="Inventory ID" />
                    <EditText
                        android:padding="8dp"
                        android:enabled="false"
                        android:id="@+id/txt_new_inv_no"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="45dp"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:background="@drawable/form_input_field_sm"
                        android:layout_height="40dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="Site"
                        android:gravity="center"
                        android:lines="2"
                        android:layout_weight="0"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:textColor="#000000"
                        android:enabled="false"
                        android:minWidth="100dp"
                        android:id="@+id/txt_new_site"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_width="wrap_content"
                        android:inputType="text"
                        android:padding="8dp"
                        android:text=""
                        android:layout_marginLeft="99dp"
                        android:background="@drawable/form_input_field_sm"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="Inventory\nName"
                        android:lines="2"
                        android:layout_weight="0"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/txt_new_inv_name"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:padding="8dp"
                        android:text=""
                        android:layout_marginLeft="59dp"
                        android:background="@drawable/form_input_field_sm"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="Choose Date"
                        android:gravity="center"
                        android:lines="2"
                        android:layout_weight="0"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:background="@drawable/form_input_field_sm"
                        android:orientation="horizontal"
                        android:layout_marginLeft="39dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:src="@drawable/calendar"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>

                        <EditText
                            android:padding="8dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="false"
                            android:textColor="#000000"
                            android:minWidth="100dp"
                            android:text=""
                            android:textSize="15sp"
                            android:onClick="showDateDialog"
                            android:id="@+id/txt_new_date"
                            android:layout_height="40dp"
                            android:minHeight="40dp"
                            android:layout_width="wrap_content"
                            android:inputType="textMultiLine"
                            android:background="@null"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_terminal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="Terminal ID"
                        android:gravity="center"
                        android:lines="2"
                        android:layout_weight="0"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:textColor="#000000"
                        android:enabled="false"
                        android:padding="8dp"
                        android:maxLength="3"
                        android:id="@+id/txt_new_terminal"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="49dp"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:minWidth="100dp"
                        android:layout_width="wrap_content"
                        android:background="@drawable/form_input_field_sm"
                        android:layout_height="40dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_shelf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="Shelf ID"
                        android:gravity="center"
                        android:lines="2"
                        android:layout_weight="0"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:padding="8dp"
                        android:maxLength="15"
                        android:id="@+id/txt_new_shelf"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="72dp"
                        android:inputType="text"
                        android:lines="1"
                        android:textAlignment="center"
                        android:minWidth="150dp"
                        android:layout_width="wrap_content"
                        android:background="@drawable/form_input_field_sm"
                        android:layout_height="40dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_scan_mode"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"
                        android:text="Scanning Mode"
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:layout_marginLeft="137dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:layout_marginTop="10dp"
                        android:id="@+id/radioGroup">

                        <RadioButton
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scan With Quantity"
                            android:id="@+id/rd_scan_qty"
                            android:checked="true"/>
                        <RadioButton
                            android:layout_marginTop="10dp"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scan Only"
                            android:id="@+id/rd_scan_only"
                            android:checked="false"/>
                    </RadioGroup>
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/button_bottom"
                    android:drawableTop="@drawable/cancel"
                    android:padding="5dp"
                    android:drawableTint="@android:color/white"
                    android:text="Cancel"
                    android:onClick="newCancelPressed"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/btn_next"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/button_bottom"
                    android:drawableTop="@drawable/next"
                    android:padding="5dp"
                    android:drawableTint="@android:color/white"
                    android:text="Next"
                    android:onClick="newNextPressed"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
</android.support.constraint.ConstraintLayout>