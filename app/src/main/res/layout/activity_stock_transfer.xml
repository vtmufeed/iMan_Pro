<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_background"
    tools:context=".StockTransfer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/lbl_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:text="Stock Transfer"
                    android:textColor="#063844"
                    android:textSize="35sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:text="Transfer ID" />
                    <EditText
                        android:enabled="false"
                        android:id="@+id/txt_new_tra_id"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="40dp"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:background="@drawable/form_input_field_sm"
                        android:layout_height="40dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="Transaction\nType"
                        android:gravity="center"
                        android:lines="2"
                        android:layout_weight="0"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:background="@drawable/form_input_field_sm"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="32dp"
                        android:layout_height="match_parent">
                    <Spinner
                        android:layout_weight="1"
                        android:id="@+id/spinner_new_tra_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="Location"
                        android:gravity="center"
                        android:lines="2"
                        android:layout_weight="0"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:background="@drawable/form_input_field_sm"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="55dp"
                        android:layout_height="match_parent">
                        <Spinner
                            android:padding="10dp"
                            android:id="@+id/spinner_new_tra_loc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:text="Trasnfer Date"
                        android:gravity="center"
                        android:lines="2"
                        android:layout_weight="0"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:clickable="true"
                        android:focusable="false"
                        android:textColor="#000000"
                        android:minWidth="100dp"
                        android:padding="10dp"
                        android:text="Tap to Choose Date"
                        android:onClick="showDateDialog"
                        android:id="@+id/txt_new_date"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_width="wrap_content"
                        android:inputType="textMultiLine"
                        android:layout_marginLeft="22dp"
                        android:background="@drawable/form_input_field_sm"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:text="Remarks" />
                    <EditText
                        android:id="@+id/txt_new_tra_remarks"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="55dp"
                        android:inputType="textMultiLine"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:background="@drawable/form_input_field_sm"
                        android:minHeight="40dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/button_bottom"
                    android:drawableTop="@drawable/cancel"
                    android:padding="5dp"
                    android:drawableTint="@android:color/white"
                    android:text="Cancel"
                    android:onClick="newCancelPressed"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
                <Button
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/button_bottom"
                    android:drawableTop="@drawable/next"
                    android:padding="5dp"
                    android:drawableTint="@android:color/white"
                    android:text="Next"
                    android:onClick="newNextPressed"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
</android.support.constraint.ConstraintLayout>