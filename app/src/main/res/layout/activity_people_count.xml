<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_background"
    android:orientation="vertical"
    tools:context=".PeopleCount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:text="People Count"
                android:layout_gravity="center_vertical"
                android:textColor="#063844"
                android:textStyle="bold"
                android:id="@+id/txt_lot"
                android:layout_marginRight="20dp"
                android:textSize="35sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:layout_gravity="center_horizontal"
                            android:text="People Inside"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/txt_ppl_inside"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:textColor="#000000"
                            android:padding="20dp"
                            android:textSize="25pt"
                            android:gravity="center_horizontal|center_vertical"
                            android:text=""
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/ppl_count_input_field"
                            android:minHeight="50dp"
                            android:minWidth="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:layout_gravity="center_horizontal"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:onClick="refreshPressed"
                            android:textColor="#ffffff"
                            android:text="Refresh"
                            android:background="@drawable/ppl_count_btn_refresh"
                            android:drawableTop="@drawable/refresh"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_width="80dp"
                            android:padding="10dp"
                            android:layout_height="80dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Slot Available"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <EditText
                            android:id="@+id/txt_slot_avail"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:textColor="#000000"
                            android:padding="20dp"
                            android:textSize="25pt"
                            android:gravity="center_horizontal|center_vertical"
                            android:text=""
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/ppl_count_input_field"
                            android:minHeight="50dp"
                            android:minWidth="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

            <Button
                android:id="@+id/btn_plus"
                android:onClick="addPressed"
                android:textSize="100dp"
                android:textColor="#ffffff"
                android:text="+"
                android:layout_marginTop="10dp"
                android:background="@drawable/ppl_count_btn_plus"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <Button
                android:onClick="minusPressed"
                android:textSize="100dp"
                android:textColor="#ffffff"
                android:text="-"
                android:id="@+id/btn_minus"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/ppl_count_btn_minus"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
                <TextView
                    android:id="@+id/txt_capacity"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>