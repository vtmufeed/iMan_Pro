<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/form_background"
    tools:context=".Shelf_qty">

    <LinearLayout
        android:id="@+id/btn_mail_inv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="280dp"
        android:layout_marginRight="5dp"
        android:elevation="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/label_fab_mail"
            android:visibility="invisible"
            android:textSize="16sp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:background="@drawable/fab_label_mail"
            android:layout_gravity="center_vertical"
            android:text=" Mail "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_fab_mail"
            android:onClick="mailPressed"
            android:visibility="invisible"
            app:borderWidth="0dp"
            android:backgroundTint="#1591D5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mail_white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_report_inv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="220dp"
        android:layout_marginRight="5dp"
        android:elevation="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/label_fab_report"
            android:visibility="invisible"
            android:textSize="16sp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:background="@drawable/fab_label_report"
            android:layout_gravity="center_vertical"
            android:text=" Report "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.support.design.widget.FloatingActionButton
            android:backgroundTint="#B215D5"
            android:onClick="reportPressed"
            android:id="@+id/btn_fab_report"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            app:borderWidth="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_float_report" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_report_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="160dp"
        android:layout_marginRight="5dp"
        android:elevation="16dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/label_fab_post"
            android:visibility="invisible"
            android:textSize="16sp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:background="@drawable/fab_label_delete"
            android:layout_gravity="center_vertical"
            android:text=" Validate "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.support.design.widget.FloatingActionButton
            android:backgroundTint="#D51515"
            android:onClick="validatePressed"
            android:id="@+id/btn_fab_post"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            app:borderWidth="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pick_icon_save" />
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:visibility="gone"
        android:id="@+id/btn_fab_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:elevation="16dp"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/btn_float_add" />

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text=""
                android:textColor="#063844"
                android:textSize="10sp"
                android:textStyle="bold" />
            <Button
                android:layout_gravity="center_vertical"
                android:onClick="backPressed"
                android:layout_width="30dp"
                android:visibility="gone"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/back_black"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:text="Shelf Quantity"
                android:textColor="#063844"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txt_scan_barcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/form_input_field_sm"
                        android:hint="Scan Barcode"
                        android:inputType="numberSigned"
                        android:minHeight="40dp"
                        android:text=""
                        android:textAlignment="center" />
                    <Button
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:background="@drawable/button_bottom"
                        android:drawableBottom="@drawable/delete"
                        android:drawableTint="@android:color/white"
                        android:onClick="deleteBarcodePressed"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Product Code" />
                    <EditText
                        android:id="@+id/txt_prodcode"
                        android:enabled="false"
                        android:text=""
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:background="@drawable/form_input_field_sm"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="SU" />
                    <EditText
                        android:id="@+id/txt_su"
                        android:enabled="false"
                        android:text=""
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:background="@drawable/form_input_field_sm"
                        android:layout_height="40dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Product Description" />
                    <EditText
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:id="@+id/txt_desc"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_width="match_parent"
                        android:text=""
                        android:enabled="false"
                        android:hint="Product Description"
                        android:inputType="textMultiLine"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/form_input_field_sm"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="Conv" />
                            <EditText
                                android:textColor="#000000"
                                android:textAlignment="center"
                                android:id="@+id/txt_conv"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:layout_width="match_parent"
                                android:text=""
                                android:enabled="false"
                                android:hint=""
                                android:inputType="textMultiLine"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/form_input_field_sm"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="RSP" />
                            <EditText
                                android:textColor="#000000"
                                android:textAlignment="center"
                                android:id="@+id/txt_rsp"
                                android:layout_height="wrap_content"
                                android:minHeight="40dp"
                                android:layout_width="match_parent"
                                android:text=""
                                android:enabled="false"
                                android:hint=""
                                android:inputType="textMultiLine"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/form_input_field_sm"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity=""
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:layout_marginLeft="14dp"
                        android:gravity="left"
                        android:text="Shelf Capacity (Required)" />
                    <EditText
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:id="@+id/txt_shelf_capacity"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_width="150dp"
                        android:text=""
                        android:layout_weight="1"
                        android:inputType="number"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/form_input_field_sm"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:layout_marginLeft="14dp"
                        android:gravity="left"
                        android:text="Facing (Required)" />
                    <EditText
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:id="@+id/txt_facing"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_width="150dp"
                        android:text=""
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:inputType="number"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/form_input_field_sm"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        android:layout_marginLeft="14dp"
                        android:gravity="left"
                        android:text="Presentation Stock" />
                    <EditText
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:id="@+id/txt_pres_stock"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:minHeight="40dp"
                        android:layout_width="150dp"
                        android:text=""
                        android:layout_weight="1"
                        android:inputType="number"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/form_input_field_sm"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_clear_inv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_bottom"
                android:drawableTop="@drawable/clear"
                android:drawableTint="@android:color/white"
                android:onClick="clearAll"
                android:padding="5dp"
                android:text="Clear"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_save_inv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_bottom"
                android:drawableTop="@drawable/save"
                android:drawableTint="#FFFFFF"
                android:onClick="savePressed"
                android:padding="5dp"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_bottom"
                android:drawableTop="@drawable/clear"
                android:drawableTint="#FFFFFF"
                android:onClick="clearAll"
                android:padding="5dp"
                android:text="Clear"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_bottom"
                android:drawableTop="@drawable/save"
                android:drawableTint="#FFFFFF"
                android:onClick="savePressed"
                android:padding="5dp"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>